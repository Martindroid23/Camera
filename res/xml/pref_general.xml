    <SwitchPreference android:icon="@drawable/quantum_ic_volume_up_grey600_24" android:layout="@layout/preference_with_margin" android:title="@string/pref_title_shuttersounds" android:key="shutter_sounds_enable" android:summary="@string/pref_description_shuttersounds" android:defaultValue="true" />
