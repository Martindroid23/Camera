<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference android:icon="@drawable/quantum_ic_place_grey600_24" android:layout="@layout/preference_with_margin" android:title="@string/pref_title_geolocation" android:key="geolocation_enable" android:defaultValue="false" />
