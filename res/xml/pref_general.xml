        <ListPreference android:icon="@drawable/quantum_ic_volume_up_grey600_24" android:entries="@array/pref_volumekey_titles" android:layout="@layout/preference_with_margin" android:title="@string/pref_title_volumekey" android:key="volumekey" android:defaultValue="1" android:entryValues="@array/pref_volumekey_values" />
