                <ListPreference android:entries="@array/pref_fingerprint_actions_back_titles" android:title="@string/pref_title_fingerprint_swipe_left" android:key="fingerprint_back_swipe_left" android:dependency="fingerprint_gestures_enable" android:defaultValue="0" android:entryValues="@array/pref_fingerprint_actions_back_values" />
