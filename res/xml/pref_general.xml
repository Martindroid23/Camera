            <SwitchPreference android:title="@string/pref_title_gestures_enable" android:key="fingerprint_gestures_enable" android:summary="@string/pref_description_gesture_enable" android:defaultValue="false" />
            <PreferenceCategory android:title="@string/fingerprint_cat_app_foreground">
                <ListPreference android:entries="@array/pref_fingerprint_actions_titles" android:title="@string/pref_title_fingerprint_swipe_left" android:key="fingerprint_swipe_left" android:dependency="fingerprint_gestures_enable" android:defaultValue="0" android:entryValues="@array/pref_fingerprint_actions_values" />
