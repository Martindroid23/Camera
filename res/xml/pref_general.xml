    <ListPreference android:icon="@drawable/quantum_ic_insert_photo_grey600_24" android:entries="@array/pref_jpegquality_titles" android:layout="@layout/preference_with_margin" android:title="@string/pref_title_jpegquality" android:key="jpegQuality" android:defaultValue="90" android:entryValues="@array/pref_jpegquality_values" />
